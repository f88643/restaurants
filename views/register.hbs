<h1 class="mb-1 restaurant-show-title">Register</h1>
{{> message}}
<div class="border border-3 shadow p-3 mb-5 bg-body rounded " style=" margin-left:30%; margin-right:30%;">
    <form action="/register" method="POST">
        <div class="d-flex justify-content-around">
            <div class="col-4">
                <label for="name">Name</label>
            </div>
            <input class="col-4" type="text" name="name" placeholder="Enter name">
        </div>
        <div class="d-flex justify-content-around">
            <div class="col-4">
                <label for="email">Email</label>
            </div>
            <input class="col-4" type="email" name="email" placeholder="Enter email" required>
        </div>
        <div class="d-flex justify-content-around">
            <div class="col-4">
                <label for="password">Password</label>
            </div>
            <input class="col-4" type="password" name="password" placeholder="Enter password" required>
        </div>
        <div class="d-flex justify-content-around">
            <div class="col-4">
                <label for="confirmPassword">Confirm password</label>
            </div>
            <input class="col-4" type="password" name="confirmPassword" placeholder="Confirm password" required>
        </div>
        <div style="margin-left: auto; margin-right: auto; width:20%" type="submit">
            <button class="btn btn-primary">Register</button>
        </div>

    </form>
    <div>
        <span>Already have an account?</span>
        <a href="/login">Login</a>
    </div>
</div>