<h1 class="mb-1 restaurant-show-title">新增餐廳</h1>
<div class="position-absolute start-50">{{#if message}}
  {{message}}
  {{/if}}
</div>
<form action="/restaurants" method="POST">
  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="name" class="col-form-label">餐廳名稱</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='name' id="name" aria-describedby="name" required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="name_en" class="col-form-label">餐廳英文名稱</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='name_en' id="name_en" aria-describedby="name_en" required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="category" class="col-form-label">餐廳類別</label>
      </div>
      <div class="col-6">
        <select name="category" id="category" aria-describedby="category" value="" required>
          <option value="">請選擇類別</option>
          <option value="美式">美式</option>
          <option value="中東料理">中東料理</option>
          <option value="日本料理">日本料理</option>
          <option value="義式餐廳">義式餐廳</option>
          <option value="酒吧">酒吧</option>
          <option value="咖啡">咖啡</option>
        </select>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="image" class="col-form-label">餐廳圖片</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='image' id="image" aria-describedby="image" required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="location" class="col-form-label">餐廳地點</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='location' id="location" aria-describedby="location" required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="phone" class="col-form-label">餐廳電話</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='phone' id="phone" aria-describedby="phone" required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="description" class="col-form-label">餐廳描述</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='description' id="description" aria-describedby="description"
          required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="google_map" class="col-form-label">地圖</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="text" name='google_map' id="google_map" aria-describedby="google_map"
          required>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-5">
        <label for="rating" class="col-form-label">評分</label>
      </div>
      <div class="col-6">
        <input class="form-control" type="number" min="1" max="5" step="0.1" name='rating' id="rating"
          aria-describedby="rating" required>
      </div>
    </div>
  </div>
  <button type="submit">Create</button>
</form>